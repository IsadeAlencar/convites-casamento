{
  "rewrites": [
    // 1. Garante que os arquivos da pasta 'assets' carreguem corretamente
    {
      "source": "/assets/(.*)",
      "destination": "/assets/$1"
    },
    // 2. Garante que a raiz do site (/) carregue a p√°gina inicial
    {
      "source": "/",
      "destination": "/index.html"
    },
    // 3. Regra principal: Redireciona QUALQUER outro caminho para o index.html
    {
      "source": "/:path",
      "destination": "/index.html"
    }
  ]
}
